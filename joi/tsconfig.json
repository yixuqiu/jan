{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["jest", "@testing-library/jest-dom"],
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "*.test.ts"]
}
